<div class="plofile-box">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %>
        <table class="table">
          <tr>
          <th>name</th>
          <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>
        <%= link_to edit_user_path(user), class: "btn btn-default btn-block edit_user_#{user.id}" do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
         <% end %>
</div>
