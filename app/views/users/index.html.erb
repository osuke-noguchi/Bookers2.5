<%= render "layouts/list" %>
<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render "users/list", user: current_user %>
   <%= render "books/list", book: @book %>
  </div>
   <div class="col-md-9">
    <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
     <% @users.each do |user| %>
    <tbody>
      <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "show", user_path(user), class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
    </div>
     </div>
</div>
<div class="containar">
  <div class="row">
   <div class="col-md-9">
    </div>
