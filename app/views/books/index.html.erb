<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link rel="stylesheet" href="style.css" media="all">
</head>
<body>
  <%= render "layouts/list" %>
<div class="container">
<div class="row">
<div class="col-md-3">
   <%= render "users/list", user: current_user %>
   <%= render "books/list", book: @book %>
</div>

<div class="col-md-9">
  <h2>Books</h2>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
      <% @books.each do |book| %>
    <tbody>
      <tr>
       <td>
        <%= link_to user_path(book.user), class: "user_#{book.user.id}" do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "50x50" %>
            <% end %></td>
       <td><%= link_to book_path(book), class: "book_#{book.id}" do %>
              <%= book.title %>
            <% end %></td>
       <td><%= book.book_body %></td>
      </tr>
      <% end %>

    </tbody>
    </table>
     </div>
    </div>
  </div>
  <div class="containar">
  <div class="row">
   <div class="col-md-9">
    </div>
    <div class="col-md-3">
      <p>CopyRight Infratop.inc</p>
  </div>
</div>
</body>
</html>
