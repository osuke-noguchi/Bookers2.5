<div class="new-book-box">
    <h2> New book</h2>
     <%= form_for(book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
              <ul>
              <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
                <% end %>


    <h4>Title</h4>
    <%= f.text_field :title, :size => "30", class: "book_title" %>
    <h4>Opinion</h4>
    <%= f.text_area :book_body, :size => "30", class: "book_body" %>
    <%= f.submit class: "btn btn-primary create-btn btn-block" %>
    <% end %>

</div>
