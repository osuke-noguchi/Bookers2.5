<div class="container">
 <div class="row">
  <h2>Editing Book</h2>
   <%= form_for(@book) do |f| %>

   <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Body</h4>
    <%= f.text_area :book_body, class: "book_body" %>
    <br>

    <%= f.submit 'Update Book' %><br>
   <% end %>
   <%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
    | <%= link_to "Back", book_path, class: "back" %>

 </div>
</div>
